<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fh="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.mine.setting.MySettingActivity">


    <com.fh.baselib.widget.FhItemView
        android:id="@+id/fv_terms_of_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        fh:text_title="服务条款"
        fh:show_border="true"
        android:layout_marginTop="@dimen/layout_interval"
        />

    <com.fh.baselib.widget.FhItemView
        android:id="@+id/fv_about_us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        fh:text_title="关于我们"
        fh:show_border="true"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_view_height"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingLeft="@dimen/margin_default"
        android:paddingRight="@dimen/margin_default"
        android:gravity="center_vertical"
        android:layout_marginBottom="40dp"
        >

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前版本"
            android:layout_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <TextView
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/circle_red_tip"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tv_version"
            app:layout_constraintBottom_toTopOf="@+id/tv_version"
            android:layout_marginTop="18dp"
            />

        <TextView
            android:id="@+id/tv_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0.0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--<com.fh.baselib.widget.FhItemView
        android:id="@+id/fv_current_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        fh:text_title="当前版本"
        tools:text_right="0.0.0"
        fh:show_border="true"
        fh:show_right_arrow = "false"
        android:layout_marginBottom="20dp"

        />-->

    <Button
        android:id="@+id/btn_sign_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sign_out"
        android:textColor="@color/textGrassGreen"
        android:background="@drawable/btn_sign_out_selector"
        />


</LinearLayout>