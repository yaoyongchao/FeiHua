<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.mine.voice.MyVoiceActivity">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tablayout"
        style="@style/MyCustomTab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_height"
        android:layout_marginBottom="@dimen/layout_interval"
        android:layout_marginTop="@dimen/layout_interval"

        app:tabTextAppearance="@android:style/TextAppearance.Holo.Large"
        />

    <com.fh.baselib.widget.NoScrollViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />


</LinearLayout>