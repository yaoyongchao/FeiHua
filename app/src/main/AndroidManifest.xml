<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fh.bdc">

    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:name=".DcApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="${app_icon}"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.mine.setting.MySettingActivity"></activity>
        <activity android:name=".ui.mine.information.PersonalInformationActivity" />
        <activity android:name=".demo.FreshActivity" />
        <activity android:name=".demo.ListDemoActivity" />
        <activity
            android:name=".demo.JiaoZiActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="portrait" />
        <activity android:name=".demo.AvActivity" />
        <activity android:name=".demo.PictureActivity" />
        <activity android:name=".ui.login.LoginActivity" /> <!-- <activity android:name=".MainActivity"></activity> -->
        <activity
            android:name=".ui.login.StartupActivity"
            android:theme="@style/Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.login.GuidePageActivity" />
        <activity android:name=".demo.TwoActivity" />
        <activity android:name=".ui.home.HomeActivity" />
    </application>

</manifest>